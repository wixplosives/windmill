{
  "name": "windmill",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "clean": "lerna run clean --stream --parallel",
    "build": "lerna run build --stream --parallel",
    "lint": "eslint . --ext .js,.ts,.tsx -f codeframe",
    "pretest": "yarn typecheck && yarn lint",
    "test": "yarn test:browser yarn test:node",
    "test:browser": "mocha-pup \"packages/**/test/**/*.spec.ts?(x)\"",
    "test:node": "mocha -r @ts-tools/node/r -r @stylable/node/register \"test/**/*.unit.ts?(x)\"",
    "typecheck": "tsc --noEmit",
    "prettify": "npx prettier \"packages/**/*.{js,ts,tsx}\" --write"
  },
  "devDependencies": {
    "@file-services/path": "^2.2.0",
    "@file-services/types": "^2.2.0",
    "@stylable/cli": "^3.3.0",
    "@stylable/core": "^3.3.0",
    "@stylable/dom-test-kit": "^3.3.1",
    "@stylable/node": "^3.3.0",
    "@stylable/runtime": "^3.2.0",
    "@stylable/webpack-plugin": "^3.3.0",
    "@ts-tools/node": "^1.1.3",
    "@ts-tools/webpack-loader": "^1.1.4",
    "@types/chai": "^4.2.11",
    "@types/compression": "^1.7.0",
    "@types/express": "^4.17.3",
    "@types/html-webpack-plugin": "^3.2.2",
    "@types/koa": "^2.11.3",
    "@types/koa-webpack": "^5.0.1",
    "@types/mocha": "^7.0.2",
    "@types/node": "12",
    "@types/react": "^16.9.27",
    "@types/react-dom": "^16.9.5",
    "@types/webpack": "^4.41.10",
    "@typescript-eslint/eslint-plugin": "^2.25.0",
    "@typescript-eslint/parser": "^2.25.0",
    "@wixc3/wcs-core": "^1.5.0",
    "chai": "^4.2.0",
    "css-loader": "^3.4.2",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-no-only-tests": "^2.4.0",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-react-hooks": "^3.0.0",
    "html-webpack-plugin": "^4.0.3",
    "lerna": "^3.20.2",
    "mini-css-extract-plugin": "^0.9.0",
    "mocha": "^7.1.1",
    "mocha-pup": "^2.1.1",
    "puppeteer": "^2.1.1",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "rimraf": "^3.0.2",
    "tsconfig-paths": "^3.9.0",
    "tsconfig-paths-webpack-plugin": "^3.2.0",
    "typescript": "~3.8.3",
    "webpack": "^4.42.1",
    "webpack-cli": "^3.3.11",
    "webpack-dev-server": "^3.10.3"
  },
  "license": "MIT",
  "private": true
}
