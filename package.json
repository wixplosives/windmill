    "@file-services/webpack": "^3.1.1",
    "@stylable/cli": "^3.10.0",
    "@stylable/core": "^3.10.0",
    "@stylable/dom-test-kit": "^3.10.0",
    "@stylable/node": "^3.10.0",
    "@stylable/runtime": "^3.10.0",
    "@stylable/webpack-plugin": "^3.10.0",
    "@ts-tools/build": "^2.1.1",
    "@ts-tools/node": "^2.1.1",
    "@ts-tools/webpack-loader": "^2.1.1",
    "@types/chai": "^4.2.12",
    "@types/compression": "^1.7.0",
    "@types/express": "^4.17.8",
    "@types/glob": "^7.1.3",
    "@types/koa": "^2.11.4",
    "@types/koa-static": "^4.0.1",
    "@types/koa-webpack": "^6.0.0",
    "@types/minimatch": "^3.0.3",
    "@types/mocha": "^8.0.3",
    "@types/node": "12",
    "@types/puppeteer": "^3.0.1",
    "@types/react": "^16.9.49",
    "@types/react-dom": "^16.9.8",
    "@types/sinon": "^9.0.5",
    "@types/sinon-chai": "^3.2.4",
    "@types/temp": "^0.8.34",
    "@types/webpack": "^4.41.22",
